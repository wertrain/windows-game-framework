//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------

Texture2D texDiffuse : register(t0);
SamplerState samLinear : register(s0);

struct PS_INPUT
{
    float4 Pos : SV_POSITION;
    float2 UV : TEXCOORD;
};

float4 psMain(PS_INPUT input) : SV_Target
{
    return texDiffuse.Sample(samLinear, input.UV) ;
    //return float4(1.0,0,0,1);
}
