//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------

Texture2D texDiffuse : register(t0);
SamplerState samLinear : register(s0);

struct PS_INPUT
{
    float4 Pos : SV_POSITION;
    float2 UV : TEXCOORD;
};

float4 psMain(PS_INPUT input) : SV_Target
{
    float4 tex = texDiffuse.Sample(samLinear, input.UV);
    if (tex.a <= 0.0) discard;
    return tex * Diffuse;
}
